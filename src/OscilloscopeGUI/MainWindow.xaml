<Window x:Class="OscilloscopeGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OscilloscopeGUI"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="Oscilloscope Analyzer" Height="700" Width="1000" WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Radky rozdelene pro ovladaci prvky a graf -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Radek 0: Tlacitka -->
            <RowDefinition Height="Auto"/>  <!-- Radek 1: Format, filtry, statistiky -->
            <RowDefinition Height="Auto"/>  <!-- Radek 2: Navigace vysledku -->
            <RowDefinition Height="*"/>     <!-- Radek 3: Graf -->
        </Grid.RowDefinitions>

        <!-- Horni tlacitka a volby -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <Button Content="Nacist CSV" Width="120" Click="LoadCsv_Click" Margin="5,0"/>

            <!-- Vyber protokolu -->
            <TextBlock Text="Protokol:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox x:Name="ProtocolComboBox" Width="80" SelectedIndex="0" Margin="0,0,10,0">
                <ComboBoxItem Content="UART"/>
                <ComboBoxItem Content="SPI"/>
            </ComboBox>

            <RadioButton x:Name="AutoDetectRadio" Content="Auto" IsChecked="True" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <RadioButton x:Name="ManualRadio" Content="Rucne" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <Button Content="Analyzovat" Width="100" Click="AnalyzeButton_Click" Margin="5,0"/>

            <!-- Vyhledavani -->
            <TextBlock Text="Hledat:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox x:Name="SearchBox" Width="80" Margin="0,0,5,0"
                     Text="(0xFF/65/A)" Foreground="Gray"
                     KeyDown="SearchBox_KeyDown"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus" />
            <Button Content="Vyhledat" Click="SearchButton_Click" Width="80" />

            <Button Content="Exportovat vysledky" Width="140" Click="ExportResultsButton_Click" Margin="5,0"/>
        </StackPanel>

        <!-- Radek s formatem, filtry a statistikami -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>    <!-- Leva cast: formaty a filtry -->
                <ColumnDefinition Width="Auto"/> <!-- Prava cast: statistiky -->
            </Grid.ColumnDefinitions>

            <!-- Format a filtr zobrazeni -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                <!-- Format zobrazeni -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="Format:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <RadioButton GroupName="Format" Content="HEX" IsChecked="True" Checked="FormatChanged" Margin="0,0,5,0"/>
                    <RadioButton GroupName="Format" Content="DEC" Checked="FormatChanged" Margin="0,0,5,0"/>
                    <RadioButton GroupName="Format" Content="ASCII" Checked="FormatChanged"/>
                </StackPanel>

                <!-- Filtry pro zobrazeni -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <TextBlock Text="Zobrazeni:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <RadioButton x:Name="FilterAllRadio" Content="Vse" IsChecked="True" Checked="FilterRadio_Checked" Margin="0,0,10,0"/>
                    <RadioButton x:Name="FilterNoErrorRadio" Content="Bez chyb" Checked="FilterRadio_Checked" Margin="0,0,10,0"/>
                    <RadioButton x:Name="FilterErrorRadio" Content="Jen chyby" Checked="FilterRadio_Checked"/>
                </StackPanel>
            </StackPanel>

            <!-- Statistiky zarovnane doprava -->
            <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Levy sloupec -->
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="StatsTotalBytes" Text="Celkový počet bajtů: -" Margin="10,0" FontWeight="Bold"/>
                        <TextBlock x:Name="StatsErrors" Text="Počet bajtů s chybou: -" Margin="10,0"/>
                        <TextBlock x:Name="StatsAvgDuration" Text="Průměrná délka bajtu: -" Margin="10,0"/>
                        <TextBlock x:Name="StatsBaudRate" Text="Odhadovaná rychlost (baud): -" Margin="10,0"/>
                    </StackPanel>


                    <!-- Pravy sloupec -->
                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="StatsSpacer" Text=" " Margin="10,0" />
                        <TextBlock x:Name="StatsMinMaxDuration" Text="Délka bajtu (min/max): -" Margin="10,0"/>
                        <TextBlock x:Name="StatsSpiTransfers" Text="Počet SPI přenosů (CS aktivní): -" Margin="10,0"/>
                        <TextBlock x:Name="StatsMosiMiso" Text="Bajty MOSI / MISO: -" Margin="10,0"/>
                    </StackPanel>
                </Grid>
        </Grid>

        <!-- Panel pro navigaci nalezu -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10"
                    VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="ResultNavigationPanel">
            <Button Content="←" Width="40" Click="PrevResult_Click" Margin="5,0"/>
            <Button Content="→" Width="40" Click="NextResult_Click" Margin="5,0"/>
            <TextBlock x:Name="ResultInfo" Text="Vysledek" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <!-- Graf a merici informace -->
        <Grid Grid.Row="3" Margin="10">
            <ScottPlot:WpfPlot Name="plot"/>

            <!-- Zobrazena casova vzdalenost mezi dvema body -->
            <TextBlock x:Name="MeasurementInfo"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Background="WhiteSmoke"
                       FontWeight="Bold"
                       Padding="5"
                       Visibility="Collapsed"
                       Panel.ZIndex="1"/>
        </Grid>
    </Grid>

</Window>
<Window x:Class="OscilloscopeGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OscilloscopeGUI"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="Oscilloscope Analyzer" Height="700" Width="1000" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <!-- Definice radku pro tlacitka a zbytek okna pro graf -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Tlacitka -->
            <RowDefinition Height="Auto"/> <!-- Vyhledavani vysledku -->
            <RowDefinition Height="*"/>    <!-- Graf zabira cely zbytek okna -->
        </Grid.RowDefinitions>

        <!-- Tlacitka nahore -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <Button Content="Načíst CSV" Width="120" Click="LoadCsv_Click" Margin="5,0"/>

            <!-- Novy protokolovy vyber -->
            <TextBlock Text="Protokol:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox x:Name="ProtocolComboBox" Width="80" SelectedIndex="0" Margin="0,0,10,0">
                <ComboBoxItem Content="UART"/>
                <ComboBoxItem Content="SPI"/>
                <ComboBoxItem Content="I2C"/>
            </ComboBox>

            <RadioButton x:Name="AutoDetectRadio" Content="Auto" IsChecked="True" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <RadioButton x:Name="ManualRadio" Content="Ručně" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <Button Content="Analyzovat" Width="100" Click="AnalyzeButton_Click" Margin="5,0"/>

            <!-- Vyhledavani v datech -->
            <TextBlock Text="Hledat:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox x:Name="SearchBox" Width="80" Margin="0,0,5,0"
                Text="např. FF" Foreground="Gray"
                KeyDown="SearchBox_KeyDown"
                GotFocus="SearchBox_GotFocus"
                LostFocus="SearchBox_LostFocus" />
            <Button Content="Vyhledat" Click="SearchButton_Click" Width="80" />

              <Button Content="Exportovat výsledky" Width="140" Click="ExportResultsButton_Click" Margin="5,0"/>
        </StackPanel>

        <!-- Vyhledavani v datech -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10"
                    VerticalAlignment="Center" HorizontalAlignment="Left" Visibility="Collapsed" x:Name="ResultNavigationPanel">
            <Button Content="←" Width="40" Click="PrevResult_Click" Margin="5,0"/>
            <Button Content="→" Width="40" Click="NextResult_Click" Margin="5,0"/>
            <TextBlock x:Name="ResultInfo" Text="Výsledek" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <!-- Graf (ScottPlot) zabira cele zbyvajici misto -->
        <ScottPlot:WpfPlot Name="plot" Grid.Row="2" Margin="10"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>

</Window>
<Window x:Class="OscilloscopeGUI.SpiChannelMappingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mapování SPI kanálů"
        Height="300"
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Zvolte kanály pro jednotlivé signály:" FontSize="14" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="CS:" Width="60" VerticalAlignment="Center"/>
                <ComboBox x:Name="CsCombo" Width="220" Height="25"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="SCLK:" Width="60" VerticalAlignment="Center"/>
                <ComboBox x:Name="SclkCombo" Width="220" Height="25"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="MOSI:" Width="60" VerticalAlignment="Center"/>
                <ComboBox x:Name="MosiCombo" Width="220" Height="25"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5" x:Name="MisoRow">
                <TextBlock Text="MISO:" Width="60" VerticalAlignment="Center"/>
                <ComboBox x:Name="MisoCombo" Width="220" Height="25"/>
            </StackPanel>
        </StackPanel>

        <Button Grid.Row="2" Content="OK" Width="80" Height="30" HorizontalAlignment="Right" Click="Ok_Click"/>
    </Grid>
</Window>
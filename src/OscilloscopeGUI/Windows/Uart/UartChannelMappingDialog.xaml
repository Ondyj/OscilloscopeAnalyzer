<Window x:Class="OscilloscopeGUI.UartChannelMappingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mapování UART kanálů" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Zadejte nové názvy pro jednotlivé kanály:" FontSize="14" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="FormPanel"/>
        </ScrollViewer>

        <Button Grid.Row="2" Content="OK" Width="80" Height="30"
                HorizontalAlignment="Right" Margin="0,10,0,0" Click="Ok_Click"/>
    </Grid>
</Window>
